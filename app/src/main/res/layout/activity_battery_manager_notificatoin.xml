<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BatteryManagerNotificatoinActivity">
    <Button
        android:id="@+id/start_battery_service_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start battery service" />

    <Button
        android:id="@+id/stop_battery_service_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop battery service" />
    <Button
        android:id="@+id/bind_battery_service_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bind battery service" />

    <Button
        android:id="@+id/unbind_battery_service_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unbind battery service" />
    <Button
        android:id="@+id/start_timer_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start timer" />
</LinearLayout>
